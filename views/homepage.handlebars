<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <a href="{{post_url}}" target="_blank">{{title}}</a>
          <span>({{post.post_url}})</span>
          <div class="meta">
            {{post.vote_count}}
            point(s) by
            {{post.user.username}}
            on
            {{post.created_at}}
            |
            <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
          </div>
        </div>
      </article>
    </li>
  {{/each}}
</ol>